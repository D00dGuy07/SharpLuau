<Window x:Class="SLObjReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SLObjReader"
        mc:Ignorable="d"
        Title="SLObjReader" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		
		<DockPanel Grid.Row="0">
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="_File">
					<MenuItem Header="_Open" Click="OnOpenCommand"/>
					<MenuItem Header="_Close" Click="OnCloseCommand"/>
				</MenuItem>
			</Menu>
			<StackPanel></StackPanel>
		</DockPanel>
		
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="4*"/>
			</Grid.ColumnDefinitions>

			<Border BorderThickness="1" Grid.Column="0" BorderBrush="#FF828790">
				<ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
					<StackPanel x:Name="FileSelectorPanel" Margin="5"/>
				</ScrollViewer>
			</Border>

			<local:SLObjFileViewer Grid.Column="1"/>
		</Grid>
	</Grid>
</Window>
